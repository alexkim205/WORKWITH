{
  "name": "work-with",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Alex Gyujin Kim <alexgkim205@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "scripts": {
    "start": "concurrently \"yarn frontend\" \"yarn backend\"",
    "frontend": "cd frontend && yarn start",
    "backend": "cd backend && yarn start",
    "tidy": "concurrently \"yarn b-clean:js\" \"yarn f-clean:js\"",
    "b-build:js": "cd backend && eslint ./ --ext .jsx,.js",
    "b-watch:js": "cd backend && esw ./ --ext .jsx,.js --clear -w --color --format codeframe",
    "b-clean:js": "cd backend && eslint ./ --ext .jsx,.js --fix",
    "f-build:js": "cd frontend && eslint ./ --ext .jsx,.js",
    "f-watch:js": "cd frontend && esw ./ --ext .jsx,.js --clear -w --color --format codeframe",
    "f-clean:js": "cd frontend && eslint ./ --ext .jsx,.js --fix"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "backend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-watch": "^6.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  }
}
